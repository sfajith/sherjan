---
import Footer from "../components/Footer";
import ResponsiveMenu from '../components/ResponsiveMenu'

const {title, description} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" href="/sherjan/favicon.svg" type="image/svg+xml">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="generator" content={description} />
		<title>{title}</title>
	</head>
	<body class="w-full m-0 p-0 dark:bg-[#121212]">
		<ResponsiveMenu client:only="react"/>
		<slot/>
		<Footer />
	</body>
</html>

<style>
html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  overflow-x:hidden; /* Esto ocultar√° cualquier contenido que se desborde horizontalmente */
}
</style>